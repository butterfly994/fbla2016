
<div class="well center-block">
	<h1>Tell us how we did</h1>

	<%= bootstrap_form_for @review do |f| %>

		<div class="row">
			<div class="col-lg-4">
				<%= f.text_field :title, label: "Title" %>
			</div>
		</div>

		<div class="row">
			<div class="col-lg-4">
				<%= f.text_area :body, label: "Feedback" %>
			</div>
		</div>

		<div class="row">
			<div class="col-lg-4">
				<%= f.number_field :rating, label: "Rating(1 for Would Come Again, 0 for Would Not Come Again)" %>
			</div>
		</div>

		<%= f.submit class: "btn btn-primary" %>
	<% end %>
</div>


