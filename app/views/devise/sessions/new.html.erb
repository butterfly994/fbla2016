<div class="well center-block">
  <%= bootstrap_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f| %>
    <h1>Sign In</h1>
    <div class="row">
      <div class="col-lg-4">
        <%= f.email_field :email, autofocus: true %>
      </div>
    </div>
    
    <div class="row">
      <div class="col-lg-4">
        <%= f.password_field :password, autocomplete: "off" %>
      </div>
    </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", class: "btn btn-primary"  %>
  </div>

<% end %>

  <%= link_to 'Don\'t have an account already?', new_user_registration_path %>
  <br>
 <%= link_to 'Are you the owner?', new_admin_session_path %>

</div>