<div class="well center-block">
  <%= bootstrap_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :role => 'form'}) do |f| %>
    <h1>Sign Up For Our Rewards Program</h1>
    <div class="row">
      <div class="col-lg-4">
        <%= f.text_field :email, label: "Email" %>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-4">
        <%= f.password_field :password, label: "Password" %>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-4">
        <%= f.password_field :password_confirmation, label: "Confirm Password"%>
      </div>
    </div>
    
    <%= f.submit class: "btn btn-primary" %>
  <% end %>


  <%= render "users/shared/links" %>
</div>
