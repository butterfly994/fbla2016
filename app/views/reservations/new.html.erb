<div class="well center-block">
<h1>Make a Reservation</h1>
<%= bootstrap_form_for @reservation do |f| %>

		<div class="row">
			<div class="col-lg-4">
				<%= f.text_field :name, label: "Name" %>
			</div>
		</div>

		<div class="row">
			<div class="col-lg-4">
				<%= f.time_field :arrival, label: "Arrival Time" %>
			</div>
		</div>

		<div class="row">
			<div class="col-lg-4">
				<%= f.number_field :party, label: "Number of People" %>
			</div>
		</div>

		<div class="row">
			<div class="col-lg-4">
				<%= f.date_field :date, label: "Date"%>
			</div>
		</div>

		<div class="row">
			<div class="col-lg-4">
				<%= f.text_field :phone, label: "Phone Number" %>
			</div>
		</div>

		<%= f.submit class: "btn btn-primary" %>
	<% end %>
</div>

