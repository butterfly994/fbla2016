<div class="well center-block">
<h1>Menus</h1>

	<%= bootstrap_form_for  @menu do |f| %>

		<div class="row">
			<div class="col-lg-4">
				<%= f.text_field :name, label: "Name" %>
			</div>
		</div>

		<div class="row">
			<div class="col-lg-4">
				<%= f.text_area :description, label: "Menu Description" %>
			</div>
		</div>

		<%= f.submit class: "btn btn-primary" %>
	<% end %>
</div>

